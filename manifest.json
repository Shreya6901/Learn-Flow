{
  "manifest_version": 3,
  "name": "YouTube Playlist Focus Mode",
  "version": "1.0",
  "description": "Transform YouTube playlists into a distraction-free learning interface",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Focus Mode"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
